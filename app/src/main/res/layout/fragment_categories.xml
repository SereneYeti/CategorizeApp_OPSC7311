<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/black"
    android:tooltipText="Categories Fragment"
    android:textSize="30sp"
    android:layout_centerInParent="true">

    <FrameLayout
        android:layout_width="407dp"
        android:layout_height="728dp"
        android:layout_centerInParent="true"
        android:background="#DCE8EA">

        <TextView
            android:id="@+id/tvRecieveText2"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="50dp"
            android:background="#FFFFFF"
            android:text="This text should have changed!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etItemName"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:ems="10"
            android:inputType="text"
            android:text="Enter Item Name" />

        <ImageView
            android:id="@+id/ivCategoryPicture"
            android:layout_width="409dp"
            android:layout_height="362dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <Button
            android:id="@+id/btnCreateItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="55dp"
            android:text="Create Item" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|left"
            android:text="Take Picture" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="100dp" />
    </FrameLayout>
</RelativeLayout>